<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 m-auto">
      {{#if record}}
      <h1 class="text-center my-3">修改項目</h1>
      <form action="/records/{{record._id}}?_method=PUT" method="POST">
        {{else}}
        <h1 class="text-center my-3">新增項目</h1>
        <form action="/records" method="POST">
          {{/if}}

          <div class="form-group mt-2">
            <label for="name">項目名稱</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Enter record name" {{#if record}}
              value="{{record.name}}" {{/if}}>
          </div>
          <div class="form-group mt-3">
            <label for="date">日期:</label>
            <input type="date" id="date" name="date" class="form-control" placeholder="yyyy-mm-dd" {{#if record}}
              value="{{record.date}}" {{/if}}>
          </div>
          <div class="form-group mt-3">
            <label for="amount">金額:</label>
            <input type="number" id="amount" name="amount" class="form-control"
              placeholder="Enter total amount of this record" {{#if record}} value="{{record.amount}}" {{/if}}>
          </div>
          <div class="form-group mt-3">
            <label for="categoryId">類別:</label>
            <select class="form-select" id="categoryId" name="categoryId" aria-label="selection of category">
              {{#if record}}<option selected value="{{record.categoryId}}">{{ record.category }}
                {{else}}
              <option selected>類別</option>
              {{/if}}
              </option>
              {{#each categories}}
              <option value="{{ this._id }}">{{ this.name }}</option>
              {{/each}}
            </select>
          </div>
          <div class="btn-form">
            <a href="/" class="btn btn-primary">
              <i class="fas fa-arrow-circle-left"></i>Back
            </a>
            <button type="reset" class="btn btn-success"><i class="fas fa-undo"></i>Reset</button>
            <button class="btn btn-warning" type="submit">
              <i class="fas fa-save"></i>Save
            </button>
          </div>
        </form>

    </div>
  </div>
</div>
